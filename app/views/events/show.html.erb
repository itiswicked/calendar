<h3><%= @event.title %></h3>
<p><%= @event.description %></p>
<span><%= @event.start_time %></span>
<br>
<span><%= @event.end_time %></span>
<%= link_to 'Edit', edit_event_path(@event) %>
<%= link_to 'Delete', event_path(@event), method: :delete %>
<br>

<h3>Add new Resource</h3>

<%= render 'resources/form' %>

<% @categories.each do |category| %>
  <h3><%= category %></h3>

  <ul>
    <% @resources.select { |resource| resource.inventory_item.category == category }.each do |resource| %>
      <li class="resource">
        <span><%= resource.inventory_item.name %></span>
        <br>
        <span>Quantity: <%= resource.quantity %></span>
        <%= link_to 'Edit', edit_event_resource_path(@event, resource) %>
      </li>
    <% end %>
  </ul>
<% end %>
