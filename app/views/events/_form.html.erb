<%= form_for @event do |f| %>
  <% if @date %>
    <%= f.hidden_field :date, value: @date.to_time %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <div class="row">
    <div class="small-6 columns start-time-field">
      <%= f.label :start_time, 'Start Time' %>
      <%= f.datetime_local_field :start_time %>
    </div>
    <div class="small-6 columns end-time-field">
      <%= f.label :end_time, 'End Time' %>
      <%= f.datetime_local_field :end_time %>
    </div>
  </div>
  <%= f.submit @button_text, class: "button small radius event-form-button" %>
<% end %>
